@{
    ViewBag.Title = "Корзина";
}

<h2>Корзина</h2>
<table class="table table-bordered table-primary">
    <tr>
        <th><p>№ книги</p></th>
        <th><p>Жанр</p></th>
        <th><p>Название книги</p></th>
        <th><p>Автор </p></th>
        <th><p>Цена</p></th>
        <th><p>Кол-во</p></th>
    </tr>


    @foreach (var p in ViewBag.Korzinas as IEnumerable<Korzina>)
    {
        <tr>
            <td><p>@p.Id</p></td>
            <td><p>@p.Genre</p></td>
            <td><p>@p.BookName</p></td>
            <td><p>@p.Author]</p></td>
            <td><p>@p.Price</p></td>
            <td><p>@p.Kol</p></td>
            <td><a href="/Home/Cancel/@p.Id" class="btn btn-danger">Удалить</a></td>
        </tr>
    }
</table>

<a href="/Home/BackToTovars" class="btn btn-primary ">В каталог</a>
